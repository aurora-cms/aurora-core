{
  "name": "aurora-cms/core",
  "description": "Aurora CMS Core",
  "license": "MIT",
  "type": "project",
  "keywords": [
    "framework",
    "symfony",
    "cms",
    "aurora"
  ],
  "homepage": "https://github.com/aurora-cms/aurora-core",
  "require": {
    "php": ">=8.3",
    "ext-amqp": "*",
    "ext-ctype": "*",
    "ext-curl": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-pdo_mysql": "*",
    "ext-xml": "*",
    "symfony/console": "~7.3.0",
    "symfony/dotenv": "~7.3.0",
    "symfony/flex": "^2.8.2",
    "symfony/framework-bundle": "~7.3.0",
    "symfony/runtime": "~7.3.0",
    "symfony/yaml": "~7.3.0"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.47",
    "friendsofphp/php-cs-fixer": "^3.86",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan": "^2.1.22",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/phpstan-symfony": "^2.0.7",
    "phpunit/phpunit": "^12.3.6",
    "rector/rector": "^2.1.4",
    "symfony/browser-kit": "~7.3.0",
    "symfony/css-selector": "~7.3.0"
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*",
    "symfony/polyfill-php82": "*"
  },
  "conflict": {
    "symfony/symfony": "*"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Aurora\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Aurora\\Tests\\": "tests/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "php-http/discovery": true,
      "phpstan/extension-installer": true,
      "symfony/flex": true,
      "symfony/runtime": true
    },
    "bump-after-update": true,
    "classmap-authoritative": false,
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "7.3.*"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "cs:check": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run -v",
    "cs:fix": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix -v",
    "lint:twig": "php bin/console lint:twig templates",
    "lint:yaml": "php bin/console lint:yaml config --parse-tags",
    "qa": [
      "@validate",
      "@normalize",
      "@cs:check",
      "@stan",
      "@test"
    ],
    "stan": "phpstan analyse --memory-limit=1G",
    "stan:baseline": "phpstan analyse --generate-baseline=phpstan-baseline.neon --memory-limit=1G",
    "test": "phpunit --colors=always"
  }
}
